{
  "haskell.manageHLS": "GHCup",
  "haskell.formattingProvider": "fourmolu",
  "haskell.checkProject": true,
  "haskell.openDocumentationInHackage": true,
  "haskell.maxCompletions": 40,
  "haskell.plugin.stan.globalOn": false,
  "haskell.plugin.eval.globalOn": true,
  "haskell.plugin.importLens.globalOn": false,
  "haskell.plugin.moduleName.globalOn": false,
  "haskell.plugin.splice.globalOn": false,
  "haskell.plugin.alternateNumberFormat.globalOn": false,
  "haskell.plugin.callHierarchy.globalOn": true,
  "haskell.plugin.changeTypeSignature.globalOn": true,
  "haskell.plugin.class.globalOn": true,
  "haskell.plugin.explicitImports.globalOn": false,
  "haskell.plugin.hlint.diagnosticsOn": true,
  "haskell.plugin.pragmas.globalOn": true,
  "haskell.plugin.refineImports.globalOn": true,
  "haskell.plugin.rename.globalOn": true,
  "haskell.plugin.retrie.globalOn": true,
  "haskell.plugin.tactics.globalOn": true,
  "haskell.plugin.typeLenses.globalOn": true,
  "haskell.trace.server": "off",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.stack-work/**": true,
    "**/dist-newstyle/**": true,
    "**/.hie-bios/**": true
  }
}